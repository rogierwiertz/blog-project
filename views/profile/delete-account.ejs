<body>
  <header>
      <%- include('../includes/navbar.ejs') %>

      <div class="p-5 text-center bg-light" style="margin-top: 58px">
        <h1 class="my-1 h4">Delete account</h1>
      </div>
  </header>

  <!-- Main Section   -->
  <main class="my-4">
      <div class="container" >

        <% if( flashMessage ) { %>
            <div class="alert alert-warning my-4" role="alert">
                <p class="mb-0"><%= flashMessage %></p>
            </div>        
          <% } %>  

          <h5 class="my-4">Are you sure you want to delete your account?</h5>
          <p class="text-danger h5 mb-4"><strong>Warning: </strong>This action cannot be undone. All your data (including articles and comments) will be deleted.</p>
  
